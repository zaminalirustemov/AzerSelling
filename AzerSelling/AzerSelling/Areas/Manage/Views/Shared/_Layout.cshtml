@inject AzerSelling.Areas.Manage.Services.AdminLayoutService service
@{
    AppUser appUser = await service.GetUser();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
