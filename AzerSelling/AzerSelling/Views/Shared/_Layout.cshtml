@inject AzerSelling.Services.MemberLayoutService memberservice
@{
	AppUser user = await memberservice.GetUser();
}

<!DOCTYPE html>
<html lang="zxx" class="no-js">

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="shortcut icon" href="~/assets/img/icon.png">
	<meta name="author" content="CodePixar">
	<meta name="description" content="">
	<meta name="keywords" content="">
	<meta charset="UTF-8">
	<title>AzerSelling</title>

	<link rel="stylesheet" href="~/assets/css/linearicons.css">
	<link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
	<link rel="stylesheet" href="~/assets/css/themify-icons.css">
	<link rel="stylesheet" href="~/assets/css/bootstrap.css">
	<link rel="stylesheet" href="~/assets/css/owl.carousel.css">
	<link rel="stylesheet" href="~/assets/css/nice-select.css">
	<link rel="stylesheet" href="~/assets/css/nouislider.min.css">
	<link rel="stylesheet" href="~/assets/css/ion.rangeSlider.css" />
	<link rel="stylesheet" href="~/assets/css/ion.rangeSlider.skinFlat.css" />
	<link rel="stylesheet" href="~/assets/css/magnific-popup.css">
	<link rel="stylesheet" href="~/assets/css/main.css">
</head>

<body>

	<!-- Header hisse -->
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-light main_box">
				<div class="container">
					<!-- Brand and toggle get grouped for better mobile display -->
					<a class="navbar-brand logo_h" asp-action="index" asp-controller="home"><img src="~/assets/img/logo.png" width="137px" height="50px" alt=""></a>
					
					<!-- Collect navigation links, forms, and other content for conversion -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						<ul class="nav navbar-nav menu_nav ml-auto">
							<li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="home">Home</a></li>
							<li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="shop">Shop</a></li>
							
							<li class="nav-item"><a class="nav-link" href="contact.html">Contact</a></li>
						</ul>
						<ul class="nav navbar-nav navbar-right">
							@if (User.Identity.IsAuthenticated)
							{
								<li class="nav-item">

									<div class="dropdown">
										<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
											
												<a class="nav-link" style="color:black"> <img style="width:25px;margin-right:5px" class=" rounded-circle" src="~/manage/assets/images/memperphoto.jpg">@user.Fullname</a>
											
										</button>
										<ul class="dropdown-menu">
											<li style="text-align-last:center"><a style="color:black" asp-action="profile" asp-controller="account">Profile</a></li>
											<li style="text-align-last:center"><a style="color:black" asp-action="orders" asp-controller="account">Orders</a></li>
											<li style="text-align-last:center"><a style="color:black" asp-action="logout" asp-controller="account">Log out</a></li>
										</ul>
									</div>


								</li>
							}
							else
							{
							<li class="nav-item"><a class="nav-link" asp-action="register" asp-controller="account"><span class="lnr lnr-plus-circle"></span>Register</a></li>
							<li class="nav-item"><a class="nav-link" asp-action="login" asp-controller="account"><span class="lnr lnr-enter" id="search"></span>Log In</a></li>
							}
							
						</ul>
					</div>
				</div>
			</nav>
		</div>
		<div class="search_input" id="search_input_box">
			<div class="container">
				<form class="d-flex justify-content-between">
					<input type="text" class="form-control" id="search_input" placeholder="Search Here">
					<button type="submit" class="btn"></button>
					<span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
				</form>
			</div>
		</div>
	</header>
	<!-- End Header Area -->
	@RenderBody()
	<!-- start footer Area -->
	<footer class="footer-area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-3  col-md-6 col-sm-6">
					<div class="single-footer-widget">
						<h6>About Us</h6>
						<p>
							Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt
							ut labore dolore
							magna aliqua.
						</p>
					</div>
				</div>
				<div class="col-lg-4  col-md-6 col-sm-6">

					<div class="single-footer-widget">
						<h6>Newsletter</h6>
						<ul>
							<li>
								<a href="#">Home</a>
							</li>
							<li>
								<a href="#">Shop</a>
							</li>
							<li>
								<a href="#">Contact</a>
							</li>
						</ul>

					</div>
				</div>
				<div class="col-lg-3  col-md-6 col-sm-6">
					<div class="single-footer-widget mail-chimp">
						<h6 class="mb-20">Instragram Feed</h6>
						<ul class="instafeed d-flex flex-wrap">
							<li><img src="~/assets/img/i1.jpg" alt=""></li>
							<li><img src="~/assets/img/i2.jpg" alt=""></li>
							<li><img src="~/assets/img/i3.jpg" alt=""></li>
							<li><img src="~/assets/img/i4.jpg" alt=""></li>
							<li><img src="~/assets/img/i5.jpg" alt=""></li>
							<li><img src="~/assets/img/i6.jpg" alt=""></li>
							<li><img src="~/assets/img/i7.jpg" alt=""></li>
							<li><img src="~/assets/img/i8.jpg" alt=""></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-2 col-md-6 col-sm-6">
					<div class="single-footer-widget">
						<h6>Follow Us</h6>
						<p>Let us be social</p>
						<div class="footer-social d-flex align-items-center">
							<a href="https://www.facebook.com/azercell/" target="_blank"><i class="fa fa-facebook"></i></a>
							<a href="https://twitter.com/Azercell" target="_blank"><i class="fa fa-twitter"></i></a>
							<a href="https://www.instagram.com/azercell/?hl=en" target="_blank"><i class="fa fa-instagram"></i></a>
							<a href="https://az.linkedin.com/company/azercell" target="_blank"><i class="fa fa-linkedin"></i></a>
						</div>
					</div>
				</div>
			</div>
			<div class="footer-bottom d-flex justify-content-center align-items-center flex-wrap">
				<p class="footer-text m-0">
					<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
				</p>
			</div>
		</div>
	</footer>
	<!-- End footer Area -->

	<script src="~/assets/js/vendor/jquery-2.2.4.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
			integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
			crossorigin="anonymous"></script>
	<script src="~/assets/js/vendor/bootstrap.min.js"></script>
	<script src="~/assets/js/jquery.ajaxchimp.min.js"></script>
